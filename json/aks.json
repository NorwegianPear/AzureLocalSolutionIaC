{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "value": "norwayeast"
        },
        "environmentType": {
            "value": "DEV"
        },
        "environmentTypeLowerCase": {
            "value": "dev"
        },
        "resourceGroupName": {
            "value": "aks-kubernetes-arc-rg"
        },
        "aksClusters": {
            "value": [
                {
                    "name": "coolAksCluster1",
                    "location": "norwayeast",
                    "kubernetesVersion": "1.20.7",
                    "dnsPrefix": "coolakscluster1",
                    "agentPoolProfiles": [
                        {
                            "name": "agentpool1",
                            "count": 3,
                            "vmSize": "Standard_DS2_v2",
                            "osType": "Linux"
                        }
                    ],
                    "servicePrincipalProfile": {
                        "clientId": "${{ secrets.COOLAKSCLUSTER1_CLIENTID }}",
                        "secret": "${{ secrets.COOLAKSCLUSTER1_SECRET }}"
                    },
                    "storageProfile": {
                        "storageAccountName": "storageaccount1"
                    },
                    "arcEnabledServices": [
                        {
                            "name": "arcService1",
                            "type": "PostgreSQL",
                            "version": "12"
                        },
                        {
                            "name": "arcService2",
                            "type": "SQLManagedInstance",
                            "version": "2019"
                        }
                    ],
                    "kubernetesApplications": [
                        {
                            "name": "myK8sApp1",
                            "namespace": "default",
                            "replicas": 3,
                            "image": "nginx:latest"
                        },
                        {
                            "name": "myK8sApp2",
                            "namespace": "default",
                            "replicas": 2,
                            "image": "mysql:5.7"
                        }
                    ]
                },
                {
                    "name": "coolAksCluster2",
                    "location": "norwayeast",
                    "kubernetesVersion": "1.20.7",
                    "dnsPrefix": "coolakscluster2",
                    "agentPoolProfiles": [
                        {
                            "name": "agentpool2",
                            "count": 3,
                            "vmSize": "Standard_DS2_v2",
                            "osType": "Linux"
                        }
                    ],
                    "servicePrincipalProfile": {
                        "clientId": "${{ secrets.COOLAKSCLUSTER2_CLIENTID }}",
                        "secret": "${{ secrets.COOLAKSCLUSTER2_SECRET }}"
                    },
                    "storageProfile": {
                        "storageAccountName": "storageaccount2"
                    },
                    "arcEnabledServices": [
                        {
                            "name": "arcService3",
                            "type": "MySQL",
                            "version": "8"
                        },
                        {
                            "name": "arcService4",
                            "type": "MongoDB",
                            "version": "4.4"
                        }
                    ],
                    "kubernetesApplications": [
                        {
                            "name": "myK8sApp3",
                            "namespace": "default",
                            "replicas": 2,
                            "image": "nginx:latest"
                        },
                        {
                            "name": "myK8sApp4",
                            "namespace": "default",
                            "replicas": 1,
                            "image": "redis:latest"
                        }
                    ]
                }
            ]
        },
        "storageAccounts": {
            "value": [
                {
                    "name": "storageaccount1",
                    "location": "norwayeast",
                    "sku": "Standard_LRS",
                    "kind": "StorageV2"
                },
                {
                    "name": "storageaccount2",
                    "location": "norwayeast",
                    "sku": "Standard_LRS",
                    "kind": "StorageV2"
                }
            ]
        },
        "tags": {
            "value": {
                "Service": "Azure Kubernetes Service",
                "Project": "AzureLocalSolutionIaC",
                "Solution": "Repository",
                "Repository": "https://github.com/NorwegianPear/AzureLocalSolutionIaC"
            }
        }
    }
}